{% extends 'base.html.twig' %}

{% block title %}Вопрос{% endblock %}

{% block body %}
    <h1>Вопрос</h1>

    {{ form_start(questionForm) }}
    {{ form_errors(questionForm.answerVariantIds) }}
    <p>{{ question.text }}</p>
    <div class="form-group">
        {% for child in questionForm.answerVariantIds %}
            <div class="form-check">
                {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
            </div>
        {% endfor %}
    </div>

    <button type="submit" class="btn btn-primary">Ответить</button>
    {{ form_end(questionForm) }}

{% endblock %}
